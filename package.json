        "cookie-parser": "^1.4.5",
        "cors": "^2.8.5",
        "dotenv": "^8.2.0",
        "express": "^4.17.1",
        "express-handlebars": "^5.1.0",
        "express-session": "^1.17.1",
        "method-override": "^3.0.0",
        "moment": "^2.27.0",
        "mongoose": "^5.10.3",
        "morgan": "^1.10.0",
        "passport": "^0.4.1",
        "cross": "^1.0.0",
        "env": "0.0.2",
        "nodemon": "^2.0.4",
